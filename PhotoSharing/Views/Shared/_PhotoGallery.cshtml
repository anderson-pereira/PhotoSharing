@model IEnumerable<PhotoSharing.Models.Photo>

<div class="row">
    @foreach (var photo in Model)
    {

        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@Url.Action("GetImage", "Photos", new {id = photo.PhotoID})" class="img-responsive" />
                <div class="caption">
                    <h3>@photo.Title<span class="label label-info"></span></h3>
                    <p>@photo.Description</p>
                    <p>Owner: @photo.UserName</p>
                    <p><a href="@Url.Action("Display", "Photos", new { id = photo.PhotoID })" class="btn btn-primary" >Exibir foto</a></p>
                </div>
            </div>
        </div>
    }
</div>

