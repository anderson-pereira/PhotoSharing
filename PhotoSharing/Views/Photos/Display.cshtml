@model PhotoSharing.Models.Photo

@{
    ViewBag.Title = "Display";
}

<h2>Details</h2>

<div>
    <h3>@Model.Title</h3>

    <div class="row">
        <div class="col-md-12">
            <img src="@Url.Action("GetImage", "Photos", new { id = Model.PhotoID })" class="img-thumbnail img-responsive" />
        </div>
    </div>

    <ul>
        <li>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</li> 
        <li>@Html.DisplayNameFor(model => model.CreatedDate): @Html.DisplayFor(model => model.CreatedDate)</li> 
        <li>@Html.DisplayNameFor(model => model.UserName): @Html.DisplayFor(model => model.UserName)</li> 
    </ul>

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
